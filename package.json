{
  "name": "@rsksmart/rif-scheduler-sdk",
  "version": "1.0.0-beta.1",
  "description": "RIF Scheduler SDK",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "ganache": "npx ganache-cli",
    "test:prepare": "typechain \"test/contracts/*.json\" --target=ethers-v5 --out-dir=test/contracts/types",
    "test": "npm run test:prepare && npx jest",
    "test:coverage": "npm run test:prepare && npx jest --coverage",
    "test:ci": "npm run test:prepare && npx jest test/*.test.ts --coverage --ci",
    "lint": "npx eslint ./src --ext .json,.js,.ts",
    "lint:fix": "npx eslint ./src --ext .json,.js,.ts --fix",
    "build": "rimraf ./dist && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rsksmart/rif-scheduler-sdk.git"
  },
  "keywords": [
    "rsk",
    "rif"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rsksmart/rif-scheduler-sdk/issues"
  },
  "homepage": "https://github.com/rsksmart/rif-scheduler-sdk#readme",
  "devDependencies": {
    "@typechain/ethers-v5": "^7.0.1",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "dotenv": "^9.0.2",
    "eslint": "^7.26.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-json": "^3.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "ganache-cli": "^6.12.2",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.6",
    "ts-loader": "^9.1.2",
    "typechain": "^5.0.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@rsksmart/rif-scheduler-contracts": "^1.0.0-beta.1",
    "cron-parser": "^3.5.0",
    "dayjs": "^1.10.4",
    "ethers": "^5.3.1"
  }
}
